GetKeyBtn.Size = UDim2.new(1, 0, 0, 52)
GetKeyBtn.Position = UDim2.new(0.5, 0, 0, 137)
GetKeyBtn.AnchorPoint = Vector2.new(0.5, 0)
GetKeyBtn.BackgroundColor3 = Color3.fromRGB(15, 15, 15)
GetKeyBtn.Text = "GET KEY"
